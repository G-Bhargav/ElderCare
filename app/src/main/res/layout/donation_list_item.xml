<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.cardview.CircularRevealCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_donation_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_donation_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_donation_occupants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableLeftCompat="@drawable/baseline_notifications_24"
            android:text="Occupants: 56"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_donation_contact"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1234567890"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_donation_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Address"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_donation_donate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="DONATE"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.circularreveal.cardview.CircularRevealCardView>